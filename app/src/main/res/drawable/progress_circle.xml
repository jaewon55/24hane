<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:innerRadiusRatio="2.51"
            android:thicknessRatio="14.6"
            android:shape="ring"
            android:useLevel="false">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/back_gradient_start"
                android:endColor="@color/back_gradient_end"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0">
            <shape
                android:innerRadiusRatio="2.51"
                android:thicknessRatio="14.6"
                android:shape="ring">
                <gradient
                    android:type="linear"
                    android:angle="225"
                    android:startColor="@color/front_gradient_start"
                    android:endColor="@color/front_gradient_end"/>
            </shape>
        </rotate>
    </item>
</layer-list>