<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splash_text_style">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.24hane.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="fontFamily">@font/inter_font_family</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="android:Widget">
        <item name="colorControlNormal">@color/dialog_color</item>
    </style>


</resources>