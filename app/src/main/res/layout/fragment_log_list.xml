<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hane24.hoursarenotenough24.inoutlog.LogListRefactor" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/log_list_background">

        <ImageButton
            android:id="@+id/calender_left_button"
            style="@style/LogCalendarButton"
            leftBtnMonth="@{viewModel.calendarMonth}"
            leftBtnYear="@{viewModel.calendarYear}"
            loadingState="@{viewModel.loadingState}"
            android:layout_marginStart="30dp"
            android:onClick="@{() -> viewModel.leftButtonOnClick()}"
            android:paddingStart="10dp"
            android:paddingEnd="80dp"
            app:tint="@color/calendar_button_color"
            android:src="@drawable/ic_baseline_chevron_left"
            app:layout_constraintBottom_toBottomOf="@id/calendar_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/calendar_date" />

        <TextView
            android:id="@+id/calendar_date"
            style="@style/LogCalendarDateText"
            android:text="@{viewModel.calendarDateText}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2022.11" />

        <ImageButton
            android:id="@+id/calender_right_button"
            style="@style/LogCalendarButton"
            loadingState="@{viewModel.loadingState}"
            rightBtnMonth="@{viewModel.calendarMonth}"
            rightBtnYear="@{viewModel.calendarYear}"
            android:layout_marginEnd="30dp"
            android:onClick="@{() -> viewModel.rightButtonOnClick()}"
            android:paddingStart="80dp"
            android:paddingEnd="10dp"
            app:tint="@color/calendar_button_color"
            android:src="@drawable/ic_baseline_chevron_right"
            app:layout_constraintBottom_toBottomOf="@id/calendar_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/calendar_date" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingStart="5dp"
            app:calendarGrid="@{viewModel.calendarList}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_date"
            app:loadingState="@{viewModel.loadingState}"
            app:spanCount="7"
            tools:itemCount="31"
            tools:listitem="@layout/fragment_log_list_calendar_item" />

        <ImageView
            android:id="@+id/loading_progressbar"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:src="@drawable/loading_dot_anim"
            app:layout_constraintBottom_toBottomOf="@id/calendar_recycler"
            app:layout_constraintEnd_toEndOf="@id/calendar_recycler"
            app:layout_constraintStart_toStartOf="@id/calendar_recycler"
            app:layout_constraintTop_toTopOf="@id/calendar_recycler"
            app:loadingState="@{viewModel.loadingState}" />

        <TextView
            android:id="@+id/month_accumulation_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_stroke"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            android:text="@{viewModel.monthAccumulationTime}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_recycler"
            tools:text="총 119시간 45분" />

        <TextView
            android:id="@+id/date_text"
            style="@style/LogListSubTitleText"
            android:layout_marginStart="10dp"
            android:text="@{viewModel.selectedDateText}"
            app:layout_constraintStart_toStartOf="@id/month_accumulation_time"
            app:layout_constraintTop_toBottomOf="@id/month_accumulation_time"
            tools:text="11.7 화요일" />

        <TextView
            android:id="@+id/day_accumulation_time"
            style="@style/LogListSubTitleText"
            android:layout_marginEnd="10dp"
            android:text="@{viewModel.dayAccumulationTime}"
            app:layout_constraintEnd_toEndOf="@id/month_accumulation_time"
            app:layout_constraintTop_toBottomOf="@id/month_accumulation_time"
            tools:text="7시간 45분" />

        <TextView
            android:id="@+id/horizontal_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:background="@color/tab_default"
            android:paddingHorizontal="5dp"
            app:layout_constraintEnd_toEndOf="@id/month_accumulation_time"
            app:layout_constraintStart_toStartOf="@id/month_accumulation_time"
            app:layout_constraintTop_toBottomOf="@+id/date_text" />

        <TextView
            android:id="@+id/log_list_header_in"
            style="@style/LogListHeaderTextView"
            android:layout_marginTop="8dp"
            android:text="입실"
            app:layout_constraintStart_toStartOf="@id/month_accumulation_time"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_line" />

        <TextView
            android:id="@+id/log_list_header_out"
            style="@style/LogListHeaderTextView"
            android:text="퇴실"
            app:layout_constraintBottom_toBottomOf="@id/log_list_header_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/log_list_header_in" />

        <TextView
            android:id="@+id/log_list_header_duration_time"
            style="@style/LogListHeaderTextView"
            android:text="체류시간"
            app:layout_constraintBottom_toBottomOf="@id/log_list_header_in"
            app:layout_constraintEnd_toEndOf="@id/month_accumulation_time"
            app:layout_constraintTop_toTopOf="@id/log_list_header_in" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/table_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fadeScrollbars="false"
            android:paddingTop="12dp"
            android:scrollbarSize="3dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/month_accumulation_time"
            app:layout_constraintHeight_max="500dp"
            app:layout_constraintStart_toStartOf="@id/month_accumulation_time"
            app:layout_constraintTop_toBottomOf="@id/log_list_header_in"
            app:tableList="@{viewModel.logTableList}"
            tools:itemCount="40"
            tools:listitem="@layout/fragment_log_list_logs_item" />

        <TextView
            tableList="@{viewModel.logTableList}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="기록이 없습니다."
            android:textAlignment="center"
            android:textColor="@color/etc_title_color"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@id/month_accumulation_time"
            app:layout_constraintStart_toStartOf="@id/month_accumulation_time"
            app:layout_constraintTop_toBottomOf="@id/log_list_header_in" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>