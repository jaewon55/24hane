<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hane24.hoursarenotenough24.reissue.ReissueViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:paddingHorizontal="40dp"
            android:paddingTop="50dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/reissue_dialog_warning_text1"
                mainWarningState="@{viewModel.reissueState}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:textColor="@color/default_text"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="카드 재발급을\n신청하시겠습니까?" />

            <TextView
                android:id="@+id/reissue_dialog_warning_text2"
                subWarningState="@{viewModel.reissueState}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:textColor="@color/front_gradient_end"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/reissue_dialog_warning_text1"
                app:layout_constraintStart_toStartOf="@+id/reissue_dialog_warning_text1"
                app:layout_constraintTop_toBottomOf="@+id/reissue_dialog_warning_text1"
                tools:text="신청 후 취소가 불가능합니다." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reissue_dialog_ok_button"
                okButtonState="@{viewModel.reissueState}"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/front_gradient_end"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="11dp"
                android:stateListAnimator="@null"
                app:cornerRadius="10dp"
                app:elevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/reissue_dialog_warning_text2"
                app:layout_constraintStart_toStartOf="@+id/reissue_dialog_warning_text2"
                app:layout_constraintTop_toBottomOf="@+id/reissue_dialog_warning_text2"
                tools:text="@string/reissue_dialog_apply_ok_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reissue_dialog_cancel_button"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:paddingVertical="11dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/overview_in_color"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:stateListAnimator="@null"
                android:text="취소"
                android:textColor="@color/default_text"
                android:textSize="14dp"
                app:cornerRadius="10dp"
                app:elevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/reissue_dialog_ok_button"
                app:layout_constraintStart_toStartOf="@+id/reissue_dialog_ok_button"
                app:layout_constraintTop_toBottomOf="@+id/reissue_dialog_ok_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
