<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.24hane.AppWidget.Container"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.24hane.AppWidgetContainer"
    android:backgroundTint="@color/white">


    <ImageView
        android:id="@+id/refresh_btn"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/widget_accepted_title"
        android:layout_toEndOf="@+id/widget_accepted_title"
        android:src="@drawable/ic_widget_refresh" />

    <ImageView
        android:id="@+id/widget_divider"
        android:layout_width="2dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/widget_divider_purple" />

    <TextView
        android:id="@+id/widget_accepted_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/widget_divider_purple"
        android:text="인정 시간"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_accepted_title"
        android:layout_alignStart="@+id/widget_accepted_title"
        android:text="160시간 0분"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/widget_divider_purple"
        android:layout_width="2dp"
        android:layout_height="32dp"
        android:layout_below="@+id/widget_divider"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/widget_divider" />

    <TextView
        android:id="@+id/widget_month_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_divider"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/widget_divider_purple"
        android:text="월 누적 시간"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_accepted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_month_title"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/widget_divider_purple"
        android:text="160시간 0분"
        android:textSize="12sp" />


</RelativeLayout>